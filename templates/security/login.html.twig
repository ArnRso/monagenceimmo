{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="login" style="background-image: url('{{ asset('assets/img/map-grayscale.svg') }}')">
        <div class="form-area">
            <h1 class="">Connectez vous</h1>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous etez connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se
                            déconnecter</a>
                    </div>
                {% endif %}

                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                       required autofocus placeholder="Email">
                <input type="password" name="password" id="inputPassword" class="form-control" required
                       placeholder="Mot de passe">

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <div class="remember">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Se souvenir de moi</label>
                </div>
                <div class="div-center">
                    <button class="btn btn-carre btn-noir" type="submit">
                        Connexion
                    </button>
                </div>

            </form>
        </div>
    </div>

{% endblock %}
